{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/public/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/public/index.html"
        }
    ]
}